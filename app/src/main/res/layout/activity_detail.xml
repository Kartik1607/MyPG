<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:contentDescription="@string/content_pg_image"
                android:id="@+id/imageView_pg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/imageView_pg_overView_height"
                android:scaleType="centerCrop"
            />

            <TextView
                android:id="@+id/textView_pg_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@xml/background_gradient"
                android:padding="@dimen/padding_textView_pg_price_overView"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSize_pg_price_overView"
                tools:text="Rs 6000"
            />

        </FrameLayout>


        <TextView
            android:id="@+id/textView_pg_location" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/textSize_pg_location_overView"
            tools:text="Sector 10A"
        />

        <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="@string/facilities"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textSize_pg_location_overView"
            android:textStyle="bold"
        />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"/>

        <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                  android:padding="@dimen/activity_horizontal_margin"
                  android:text="@string/contact"
                  android:textColor="@android:color/black"
                  android:textSize="@dimen/textSize_pg_location_overView"
                  android:textStyle="bold"
        />

        <TextView android:id="@+id/textView_Address" android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="@dimen/activity_horizontal_margin"
        />
        <TextView android:id="@+id/textView_Contact" android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="@dimen/activity_horizontal_margin"
        />

        <ImageView android:id="@+id/button_map" android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:layout_marginLeft="@dimen/activity_horizontal_margin"
                   android:src="@drawable/goolge_map_icon"
                   android:text="View on Map"
                   android:contentDescription="@string/content_map"
        />
    </LinearLayout>

</ScrollView>

