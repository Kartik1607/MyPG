<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/widget_item"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorWhite"
              android:orientation="horizontal"
>

    <TextView android:id="@+id/textView_payment_status" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/activity_vertical_margin"
              android:gravity="center_vertical"
              android:textColor="@color/colorGreen"
              android:textSize="@dimen/textSize_pg_location_overView"
    />

    <TextView android:id="@+id/textView_payment_date" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/activity_vertical_margin"
              android:gravity="center_vertical"
              android:textSize="@dimen/textSize_pg_location_overView"
    />

    <TextView android:id="@+id/textView_payment_amount" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:layout_margin="@dimen/activity_horizontal_margin"
              android:gravity="end"
              android:textSize="@dimen/textSize_pg_location_overView"
              android:textStyle="bold"
    />

</LinearLayout>
